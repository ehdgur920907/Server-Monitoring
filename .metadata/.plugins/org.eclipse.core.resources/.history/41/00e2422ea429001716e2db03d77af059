<mapper namespace="com.monitoring.mapper.Mapper">
	<resultMap type="com.monitoring.dto.MonitoringInformationDto" id="monitoringInformation">
		<result property="totalDisk" column="total_disk" />
		<result property="usedDisk" column="used_disk" />
		<result property="freeDisk" column="free_disk" />
		<result property="totalMemory" column="total_memory" />
		<result property="usedMemory" column="used_memory" />
		<result property="freeMemory" column="free_memory" />
		<result property="osName" column="os_name" />
		<result property="hostName" column="host_name" />
		<result property="ipAddress" column="ip_address" />
		<result property="id" column="id" />
	</resultMap>

	<select id="selectMonitoringInformation" resultMap="monitoringInformation">
		SELECT total_memory, used_memory, free_memory, total_disk, used_disk, free_disk FROM basic_Information WHERE id= #{id}
	</select>
</mapper>