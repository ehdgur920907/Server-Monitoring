package kr.or.connect.todo.api;

import java.util.ArrayList;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import kr.or.connect.todo.domain.Todo;
import kr.or.connect.todo.service.TodoService;

@RestController
public class TodoController {
	@Autowired
	public TodoService todoService;
	
	@PostMapping("/api/todos")
	@ResponseBody
	public String add(Model model, @RequestParam("data") String data, @RequestParam("status") String status) {
		todoService.save(new Todo(data, status));
		System.out.println(todoService.findAll());
		ArrayList<Todo> arrayListTodo = (ArrayList<Todo>) todoService.findAll();
		System.out.println(arrayListTodo);
		return null;
	}
}
