package com.monitoring.controller;

import java.util.ArrayList;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.monitoring.dto.ServerInformationDto;
import com.monitoring.mapper.Mapper;

@Controller
public class IndexController {
	@Autowired
	private SqlSession sqlSession;
	
	@RequestMapping("/")
	public String memory(Model model, @RequestParam String status) {
		Mapper mapper = sqlSession.getMapper(Mapper.class);
		ArrayList<ServerInformationDto> arrayListServerInformation = new ArrayList<ServerInformationDto>();
//		BasicInformationDto basicInformationDto = new BasicInformationDto();
		
		for (int i = 0; i < mapper.selectServerInformationList().size(); i++) {
			arrayListServerInformation.add(mapper.selectServerInformationList().get(i));
//			String id = mapper.selectServerInformationList().get(i).getId();
//			basicInformationDto = mapper.selectBasicInformation(id).get(mapper.selectBasicInformation(id).size() - 1);
//			
//			if (Double.parseDouble(basicInformationDto.getFreeMemory()) <= 1.00) {
//				
//			}
		}
		

		model.addAttribute("arrayListServerInformation", arrayListServerInformation);
		return "index";
	}
}
