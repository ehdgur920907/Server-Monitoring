package kr.or.connect.todo.service;

import java.util.List;

import org.springframework.stereotype.Service;

import kr.or.connect.todo.service.persistence.TodoDao;

@Service
public class TodoService {
	TodoDao todoDao;

	public void insert(Todo todo) {
		todoDao.insert(todo);
	}
	
	public void delete(Integer id) {
		todoDao.delete(id);
	}
	
	public Todo SelectId(Integer id) {
		Todo todo = todoDao.selectId(id);
		return todo;
	}
	public List<Todo> selectAll() {
		return todoDao.selectAll();
	}
	
	public List<Todo> selectAllActive(String active) {
		return todoDao.selectAllActive(active);
	}
	
	public void selectAllCompleted(String completed) {
		todoDao.selectAllActive(completed);
	}
	
	public void updateCompleted(Todo todo) {
		todoDao.updateCompleted(todo);
	}
}
