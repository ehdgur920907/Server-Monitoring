		<result property="pw" column="pw" />
	</resultMap>
	
	<select id="selectUsedMemory" parameterType="String" resultMap="usedInformation">
		SELECT used_memory FROM basic_information WHERE id=#{id}
	</select>
	
	<select id="selectUsedMemory" parameterType="String" resultMap="usedInformation">
		SELECT used_disk FROM basic_information WHERE id=#{id}
	</select>
	
	<select id="selectUsedMemory" parameterType="String" resultMap="usedInformation">
		SELECT user_cpu + system_cput FROM basic_information WHERE id=#{id}
	</select>
