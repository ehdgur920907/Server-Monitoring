		>
	<bean id="dataSource" class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		
		<beans:bean name="my_dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<beans:property name="driverClassName" value="com.mysql.jdbc.Driver"></beans:property>
		<beans:property name="url"
			value="jdbc:mysql://localhost:3306/test?characterEncoding=utf8"></beans:property>
		<beans:property name="username" value="root"></beans:property>
		<beans:property name="password" value="delab"></beans:property>
	</beans:bean>

	<beans:bean id="my_sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<beans:property name="dataSource" ref="my_dataSource"></beans:property>

		<beans:property name="mapperLocations">
			<beans:array>
				<beans:value>classpath:com/netty/project/user/mapper/*.xml
				</beans:value>
			</beans:array>
		</beans:property>
	</beans:bean>
	
	<beans:bean id="userMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
  		<beans:property name="mapperInterface" value="com.netty.project.user.repository.UserMapper" />
  		<beans:property name="sqlSessionFactory" ref="my_sqlSessionFactory" />
	</beans:bean>
		
	</bean>
	
</beans:beans>
