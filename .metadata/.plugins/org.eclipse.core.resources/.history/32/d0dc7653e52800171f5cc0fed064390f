package com.information.get;

import org.hyperic.sigar.Mem;
import org.hyperic.sigar.Sigar;

import com.information.model.Memory;

public class GetMemory implements Get {
	@Override
	public Memory execute() {
		Sigar sigar = new Sigar();
		Memory memory = new Memory();
		Double totalMemory, usedMemory, freeMemory;

		Mem mem = null;

		try {
			totalMemory = (double)Math.round((double) mem.getFree() / 1000000000);
			usedMemory = (double)Math.round((double) mem.getUsed() / 1000000000);
			freeMemory = (double)Math.round((double) mem.getTotal() / 1000000000);
			mem = sigar.getMem();
			Double.parseDouble(String.format("%.2f", Math.round((double) mem.getFree() / 1000000000))))));
			/* KB ->Â GB */
			memory.setFreeMemory(String.valueOf(Math.round((double) mem.getFree() / 1000000000));
			memory.setUsedMemory(String.valueOf(Math.round(((double) mem.getUsed() / 1000000000) * 100) / 100.0));
			memory.setTotalMemory(String.valueOf(Math.round(((double) mem.getTotal() / 1000000000) * 100) / 100.0));
		} catch (Exception e) {
			e.printStackTrace();
		}
		return memory;
	}
}
