package kr.or.connect.todo.service.persistence;

public class TodoSqls {
	public static final String INSERT = "INSERT INTO todos(todo, status) VALUES(:todo, :status)";
	public static final String DELETE = "DELETE FROM todos WHERE id=:id";
	public static final String SELECT_ALL = "SELECT todo FROM todos";
	public static final String SELECT_ALL_ACTIVE = "SELECT todo FROM todos WHERE status=:active";
	public static final String SELECT_ALL_COMPLETED = "SELECT todo FROM todos WHERE status=:completed";
}
